 </version>
 <stability>
  <release>beta</release>
  <api>beta</api>
 </stability>
 <license uri="http://www.gnu.org/copyleft/lesser.html">LGPL Version 2.1</license>
 <notes>Big Bug fixes, new extension support, and much faster parsing :) !</notes>
 <contents>
  <dir name="/">
   <dir baseinstalldir="Gtk2" name="/">
    <file baseinstalldir="Gtk2/PHPConfig" name="phpinidefs.xml" role="data" />
    <file baseinstalldir="Gtk2/PHPConfig" name="run.phpw" role="php" />
    <file baseinstalldir="Gtk2" name="PHPConfig.php" role="php" />
   </dir>
   <dir baseinstalldir="/" name="/">
    <file name="gtk2_phpconfig" role="script" platform="unix" /> 
   </dir>
  </dir>
 </contents>
 <dependencies>
  <required>
   <php>
    <min>5.1</min>
    <max>6.0.0</max>
   </php>
   <pearinstaller>
    <min>1.4.1</min>
   </pearinstaller>
   <extension>
    <name>php-gtk</name>
    <min>2.0.0dev</min>
   </extension>
  </required>
 </dependencies>
